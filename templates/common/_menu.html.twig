<ul class="navbar-nav">
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            Products
        </a>
        <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="{{ path('products') }}">All</a></li>
            {% if itemCategories %}
                {% for category in itemCategories %}
                    <li><a class="dropdown-item" href="{{ path('productsCategory', {'category' : category.slug}) }}">{{ category.name }}</a></li>
                {% endfor %}
            {% endif %}
        </ul>
    </li>
    {% if grades %}
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Grade
            </a>
            <ul class="dropdown-menu">
                {% for grade in grades %}
                    <li><a class="dropdown-item" href="{{ path('productsGrade', {'grade' : grade.slug}) }}">{{ grade.name }}</a></li>
                {% endfor %}
            </ul>
        </li>
    {% endif %}
    <li class="nav-item">
        <a class="nav-link text-nowrap {{ route == 'contactUs' ? 'active' }}" aria-current="page" href="{{ path('contactUs') }}">Contact Us</a>
    </li>
</ul>
<ul class="d-flex navbar-nav">
    <li class="nav-item me-4">
        {% if route == 'checkout' %}
            <a href="{{ path('cart') }}" class="px-2 py-1 btn border-dark position-relative">
                <i class="fas fa-shopping-cart"></i>
                <span class="position-absolute cart-counter top-0 start-100 translate-middle badge rounded-pill bg-danger">{{ cartCount }}</span>
            </a>
        {% else %}
            <button {{ route == 'cart' ? 'disabled' }} data-bs-toggle="offcanvas" data-bs-target="#cart" aria-controls="cart" class="px-2 py-1 btn border-dark position-relative">
                <i class="fas fa-shopping-cart"></i>
                <span class="position-absolute cart-counter top-0 start-100 translate-middle badge rounded-pill bg-danger">{{ cartCount }}</span>
            </button>
        {% endif %}
    </li>
    {% set user = app.user %}
    {% if user %}
        <li class="nav-item dropdown profile-icon" data-toggle="tooltip" title="Profile">
            <a class="text-primary" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                {% if user.avatar %}
                    <img class="ratio-1-1 object-fit-cover border border-dark rounded-circle" style="width: 38px" src='{{ ('profile/' ~ user.avatar) | imagine_filter('sm')}}' alt/>
                {% else %}
                    <i class="fa fa-user-circle fa-2x"></i>
                {% endif %}
            </a>
            <div class="dropdown-menu dropdown-menu-end rounded-0 p-0 bg-primary-gradient">
                {% if is_granted('ROLE_EASYADMIN') %}
                    <a class="dropdown-item" href="{{ path('admin') }}">Admin</a>
                {% endif %}
                <a class="dropdown-item" href="{{ path('profile') }}">My Profile</a>
                <a class="dropdown-item" href="{{ path('myOrders') }}">My Orders</a>
                <a class="dropdown-item" href="{{ path('logout') }}">Logout</a>
            </div>
        </li>
    {% if is_granted('ROLE_EASYADMIN') %}
        <li class="nav-item d-block d-lg-none"><a class="dropdown-item text-primary fw-bold" href="{{ path('admin') }}">Admin</a></li>
    {% endif %}
    <li class="nav-item d-block d-lg-none"><a class="dropdown-item" href="{{ path('profile') }}">My Profile</a></li>
    <li class="nav-item d-block d-lg-none"><a class="dropdown-item" href="{{ path('myOrders') }}">My Orders</a></li>
    <li class="nav-item d-block d-lg-none"><a class="dropdown-item" href="{{ path('logout') }}">Logout</a></li>
    {% else %}
        <li class="nav-item">
            <button class="nav-link btn py-1 rounded-0" data-bs-toggle="modal" data-bs-target="#loginModal">Sign In</button>
        </li>
    {% endif %}
</ul>

