{% set route = request.get('_route') %}
{% set url = request.uri %}
{% set setting = app.session.get('setting') %}
{% set title = metaTitle|default(setting.metaTitle) %}
{% set desc = metaDescription|default(setting.metaDescription) %}
{% set keywords = metaKeywords|default(setting.metaKeywords) %}
{% set image = metaImage ? (metaImage|imagine_filter('md')) : absolute_url(asset('images/logo.png')) %}
{#{{ dump(route, url, title, desc, keywords) }}#}
<meta charset="UTF-8">
<title>{{ title|raw }}</title>
<meta name="viewport" content="user-scalable=no, width=device-width, initial-scale=1, minimum-scale=1">
<meta name='robots' content='index, follow' />
<meta name="description" content="{{ desc }}" />
<meta name="keywords" content="{{ keywords }}" />
<link rel="canonical" href="https://www.innovineschoolshop.com{{ request.pathInfo }}" />
<meta property="og:title" content="{{ title }}" />
<meta property="og:type" content="website" />
<meta property="og:url" content="{{ url }}" />
<meta property="og:image" content="{{ image }}" />
<meta property="og:site_name" content="{{ env('SITE_NAME') }}" />
<meta property="og:description" content="{{ desc }}" />
<meta name="twitter:card" content="summary" />
<meta name="twitter:title" content="{{ title }}" />
<meta name="twitter:description" content="{{ desc }}" />
<meta name="twitter:image" content="{{ image }}" />
<meta itemprop="image" content="{{ image }}" />
{% if setting.googleSiteVerificationCode %}
    <meta name="google-site-verification" content="{{ setting.googleSiteVerificationCode }}" />
{% endif %}