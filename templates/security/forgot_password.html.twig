{% extends 'base.html.twig' %}

{% block body %}
    <div class="py-5 px-3">
        <div class="card cm sm pt-5">
            <div class="card-body px-0 px-sm-4 py-0 text-center">
                <form method="post" autocomplete="off">
                    <h5 class="text-primary pb-3">FORGOT PASSWORD</h5>
                    <div class="text-start mb-2">Please enter your email address to search for your account.</div>
                    <div class="form-floating mb-3">
                        <input type="email" class="form-control" id="emailInput" name="email" placeholder="Email" required>
                        <label for="emailInput">Email</label>
                    </div>
                    <div class="my-4">
                        <button class="btn btn-theme py-2 px-4" type="submit">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}