<form method="post" autocomplete="off" action="{{ path('login') }}">
    <div class="text-center mb-4">
        <img src="{{ asset('images/logo.png') }}" alt="Innovine Solutions">
    </div>
    
    <div class="form-floating mb-3">
        <input type="email" class="form-control" id="emailInput" name="_username" value="{{ last_username is defined ? last_username }}" placeholder="Email" required>
        <label for="emailInput">Email</label>
    </div>
    <div class="form-floating mb-3">
        <input type="password" class="form-control" id="passwordInput" name="_password" value="{{ last_username is defined ? last_username }}" placeholder="Password" required>
        <label for="passwordInput">Password</label>
    </div>
    <div class="d-flex mb-3 justify-content-between">
        <div class="form-check">
            <input type="checkbox" id="remember_me" name="_remember_me" class="form-check-input">
            <label class="form-check-label" for="remember_me">Remember me</label>
        </div>
    </div>
    <div class="text-center">
        <div class="my-3"><a href="{{ path('forgotPassword') }}">Forgot Password?</a></div>
        <div class="mb-0">No Account? <a href="{{ path('signup') }}" class="text-decoration-underline">Create one!</a></div>
    </div>
    <div class="mt-4 text-center">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <button class="btn btn-theme py-2 px-4" type="submit">Login</button>
    </div>

    {% if error|default(false) %}
        <div class="alert alert-danger mt-3">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
</form>