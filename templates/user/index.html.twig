{% extends 'base.html.twig' %}
{% block body %}
    {% set user = app.user %}
    <section class="my-profile section-start my-5">
        <div class="container">
            {% if user %}
                <div class="banner-area d-flex rounded-4">
                    <div class="px-md-5 px-3 mt-3 mb-n5 py-4">
                        <img src="{{ user.avatar ? ('profile/' ~ user.avatar) | imagine_filter('sm') : asset('images/default-user.png') }}" class="img-fluid rounded-circle border profile-photo" alt>
                    </div>
                    <div class="profile-details py-4">
                        <h6 class="pt-md-3 pt-0">Hi, ðŸ‘‹ {{ user }}</h6>
                        <div>{{ user.email }}</div>
                    </div>
                </div>
            {% endif %}
            <div class="row my-5">
                <div class="col-md-2 profile-tab">
                    <div class="list-group" id="list-tab" role="tablist">
                        <a class="list-group-item list-group-item-action {{ route == 'profile' ? 'active' }} border-0 rounded-0 fw-bold" href="{{ path('profile') }}">Profile</a>
                        <a class="list-group-item list-group-item-action {{ route == 'address' ? 'active' }} border-0 rounded-0 fw-bold" href="{{ path('address') }}">Address</a>
                        <a class="list-group-item list-group-item-action border-0 rounded-0 fw-bold" href="{{ path('myOrders') }}">My Orders</a>
                    </div>
                </div>
                <div class="col-md-10">
                    <div class="tab-content profile-hr-tab" id="nav-tabContent">
                        {% block tabpanel %}{% endblock %}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}