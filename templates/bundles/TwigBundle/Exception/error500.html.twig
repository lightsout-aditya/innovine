{% extends 'base.html.twig' %}

{% block breadcrumb %}{% endblock %}
{% block footer %}{% endblock %}

{% block body %}
    <section class="error text-center container pt-4 px-5">
        <div class="pb-4">
            <img src="{{ asset('images/error.png') }}" alt="Page Not Found">
            <h5 class="red-gradient-font">Internal Server Error</h5>
        </div>
        <h4 class="text-black fw-bolder">Oops, something went wrong</h4>
        <p class="py-3">Try to refresh the page or feel free to contact us if the problem persists.</p>
        <div>
            <button class="btn btn-gradient border-0 rounded-pill px-4 m-1" onclick="location.reload()">Refresh</button>
            <button type="button" class="btn btn-outline-primary border-red rounded-pill m-1" onclick="history.back()">Previous Page</button>
        </div>
    </section>
{% endblock %}