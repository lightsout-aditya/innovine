{% extends 'base.html.twig' %}

{% block extra_javascripts %}
{% endblock %}

{% block body %}
    {% set setting = app.session.get('setting') %}
    <section class="home-banner">
        <div class="banner-area">
            <div class="container">
                <div class="row">
                    <div class="d-flex order-lg-1 col-lg-5 align-self-lg-end pt-5 justify-content-center">
                        <img src="{{ setting.homeBannerImage ?  setting.homeBannerImage | imagine_filter('lg') : asset('images/banner-img.png') }}" height="530" class="img-fluid" alt="">
                    </div>
                    <div class="d-flex col-lg-7">
                        <div class="my-0 my-lg-7 py-3 py-md-5 my-lg-5 mx-3">
                            <div class="mb-3 h1">{{ setting.homeBannerTitle | raw }}</div>
                            <div class="mb-4">{{ setting.homeBannerDescription | raw }}</div>
                            <div class="input-group input-group-lg my-5">
                                <input type="text" class="form-control rounded-0" placeholder="Search here">
                                <button class="btn btn-dark rounded-0 home-search-btn" type="button">Search</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    {% if kits | length %}
        <section class="mt-3 py-sm-5 py-2" id="combinedKit">
            <div class="container">
                <div class="pb-2 pb-sm-5" >
                    <div class="mb-2">
                        <div class="h2">{{ setting.combinedKitTitle | raw }}</div>
                        <div class="my-4">{{ setting.combinedKitDescription | raw }}</div>
                    </div>
                    <div class="splide combined-kit container mb-5">
                        <div class="splide__track">
                            <div class="splide__list mb-3">
                                {% for product in kits %}
                                    <div class="splide__slide h-auto p-1">
                                        <div class="card p-2 rounded-4">
                                            {% set image = product.image %}
                                            <img src="{{ image ? (image | imagine_filter('sm')) : asset('images/default.png') }}" class="product-img ratio-4-2 object-fit-{{ image ? 'contain' : 'cover' }} p-2" alt>
                                            <div class="card-body">
                                                <div class="card-title h6">{{ product.name }}</div>
                                            </div>
                                            <div class="card-footer bg-white">
                                                <div class="d-flex {{ showPrice ? 'justify-content-between' : 'justify-content-center' }} align-items-center">
                                                    <div>{{ showPrice ? product.price|format_currency('INR', {fraction_digit: 0}) }}</div>
                                                    <div class="d-flex">
                                                        {% include('default/_cart_button.html.twig') with {'onlyIcon' : false} %}
                                                        <div class="ms-2">
                                                            <a href="{{ path('productDetails', {'slug' : product.slug}) }}" class="px-2 py-1 btn border-dark">
                                                                <i class="far fa-eye"></i>
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    {% endif %}
    {% if trendingProducts | length %}
        <section class="py-5 bg-tertiary">
            <div class="container pb-5">
                <div class="mb-2">
                    <div class="h2">{{ setting.trendingProductsTitle | raw }}</div>
                    <div class="my-4">{{ setting.trendingProductsDescription | raw }}</div>
                </div>
                <div class="splide trending-product container mb-3">
                    <div class="splide__track">
                        <div class="splide__list mb-3">
                            {% for product in trendingProducts %}
                                <div class="splide__slide h-auto p-1">
                                    <div class="card p-2 rounded-4">
                                        {% set image = product.image %}
                                        <img src="{{ image ? (image | imagine_filter('sm')) : asset('images/default.png') }}" class="product-img ratio-4-2 object-fit-{{ image ? 'contain' : 'cover' }} p-2" alt>
                                        <div class="card-body">
                                            <div class="card-title h6 text-truncate">{{ product.name }}</div>
                                        </div>
                                        <div class="card-footer bg-white">
                                            <div class="d-flex {{ showPrice ? 'justify-content-between' : 'justify-content-center' }} align-items-center">
                                                <div>{{ showPrice ? product.price|format_currency('INR', {fraction_digit: 0}) }}</div>
                                                <div class="d-flex">
                                                    {% include('default/_cart_button.html.twig') with {'onlyIcon' : false} %}
                                                    <div class="ms-2">
                                                        <a href="{{ path('productDetails', {'slug' : product.slug}) }}" class="px-2 py-1 btn border-dark">
                                                            <i class="far fa-eye"></i>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </section>
    {% endif %}
    {% if setting.howWorks|length %}
        <section class="my-5">
            <div class="container">
                <div>
                    <div class="mb-2 text-center">
                        <div class="h2">{{ setting.howWorksTitle | raw }}</div>
                        <div class="my-4">{{ setting.howWorksDescription | raw }}</div>
                    </div>
                    <div class="row row-cols-1 row-cols-md-3 g-4">
                        {% for howWork in setting.howWorks %}
                            <div class="col">
                                <div class="card p-2 rounded-4">
                                    <img src="{{ howWork.image | imagine_filter('md') }}" class="card-img-top p-2" alt>
                                    <div class="card-body">
                                        <div class="card-title h6">{{ howWork.title }}</div>
                                        <div>{{ howWork.description | raw }}</div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </section>
    {% endif %}
    {% if setting.keyFeatures|length %}
    <section class="features-section my-5">
        <div class="features"></div>
        <div class="container m-auto">
            <div class="d-flex flex-wrap justify-content-center border-8 feature-container py-md-3 rounded-2">
                {% for keyFeature in setting.keyFeatures %}
                    <div class="col-lg-3 col-md-6 col-sm-12 p-3">
                        <div class="d-flex justify-content-center align-items-center">
                            <img src="{{ keyFeature.icon | imagine_filter('sm') }}" width="45" alt="shape" />
                        </div>
                        <div class="text-center h6">{{ keyFeature.title }}</div>
                        <div class="subtitle m-0 mx-auto text-center">{{ keyFeature.description | raw }}</div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
    {% endif %}
{% endblock %}